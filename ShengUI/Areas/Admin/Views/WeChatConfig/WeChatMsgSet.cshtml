@section backScripts
{

    <script type="text/javascript">

        //相对路径
        var rootPath = "@Url.Content("~/Admin/")";
        var table = "#msgsettable";
        var gridUrl = rootPath + 'WeChatConfig/GetWeChatMsgSetForGrid';
        //加载toolbar
        LG.loadToolbar("tablebutton", toolbarBtnItemClick);
        $(document).ready(function () {
            //TablePage();
            var dt = $(table).dataTable({
                "processing": true,
                "serverSide": true,
                "ordering": true,
                "order": [[0, "desc"]],
                "ajax": {
                    "url": gridUrl,
                    "type": "POST"
                },
                "columns": [
                    { "data": "Id", "name": "[Contains]{main}Id", "orderable": "Id" },
                    { "data": "EventName", "name": "[Contains]{main}EventName", "orderable": "EventName" },
                    { "data": "msgType", "name": "[Contains]{main}msgType", "orderable": "msgType" },
                    { "data": "KeyWorld" },
                    { "data": "flat1" },
                     { "data": "msgType" }


                ],
                "columnDefs": [
                        {
                            "render": function (data, type, row) {
                                if (data == 'subscribe')
                                    return "关注事件";
                                else if (data == "SCAN")
                                    return "已关注事件";
                                else if (data == 'keyword')
                                    return "关键词事件";
                                else if (data == "image")
                                    return "图片事件";
                                else if (data == 'voice')
                                    return "语音事件";
                                else if (data == "location")
                                    return "地理位置事件";
                                else
                                    return " ";
                            },
                            "targets": 1
                        },
                       {
                           "render": function (data, type, row) {
                               if (data == 1)
                                   return "发送消息";
                               else if (data == 2)
                                   return "发送图文";
                               else
                                   return " ";
                           },
                           "targets": 2
                       },
                      {
                          "render": function (data, type, row) {
                              if (data == 0)
                                  return "未配置";
                              else if (data == 1)
                                  return "已配置";
                              else
                                  return "未配置 ";
                          },
                          "targets": 4
                      },
                         {
                             "render": function (data, type, row) {
                                 if (data == 1)
                                     return "text";
                                 else if (data == 2)
                                     return "news";
                                 else
                                     return " ";
                             },
                             "targets": 5
                         },
                ]

            });
            $(table + ' tbody').on('click', 'tr', function () {
                $(this).toggleClass('info');

            });

        });
        //工具条事件
        function toolbarBtnItemClick(item) {
            var id = item.id;
            if (item.id == undefined)
                id = item.currentTarget.id;
            switch (id) {
                case "WeChatSetAdd":
                    Jump("/admin/user/detail")
                    break;
                case "Update":
                    var selected = $(table).DataTable().rows('.info').data()[0];
                    if (!selected) {
                        window.parent.LG.tip('请选择行!');
                        return
                    }
                    Jump("/admin/user/detail?id=" + selected.USER_ID)
                    break;
                case "Delete":

                    if (confirm('确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?')) {
                        f_delete();
                        // 退出操作;
                    }

                    break;
                case "RealDelete":
                    $.messager.confirm('删除', '确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?', function (r) {
                        if (r) {
                            realdelete();
                            // 退出操作;
                        }
                    });
                    break;
                case "selectall":
                    $(table + '  tr').toggleClass('info');
                    break;
            }
        }

    </script>
}

