@section backScripts
{

    <script type="text/javascript">

        //相对路径
        var rootPath = "@Url.Content("~/Admin/")";
        var table = "#ordertable";
        var gridUrl = rootPath + 'Order/GetOrderForGrid';
        //加载toolbar
        LG.loadToolbar("tablebutton", toolbarBtnItemClick);
        $(document).ready(function () {
            //TablePage();
            var dt = $(table).dataTable({
                "processing": true,
                "serverSide": true,
                "ordering": true,
                "order": [[7, "desc"]],
                "ajax": {
                    "url": gridUrl,
                    "type": "POST",
                    "data": { "[Equal]ssh_status":0 }
                },
                "columns": [
                    { "data": "orderNum", "name": "[Contains]{main}orderNum", "orderable": "orderNum" },
                    { "data": "remark1", "orderable": false },
                    { "data": "flat1", "orderable": false },
                    { "data": "UserId", "name": "[Contains]{main}UserId", "orderable": "UserId" },
                    { "data": "userName", "name": "[Contains]{main}userName", "orderable": "userName" },
                    { "data": "UserTel", "name": "[Contains]{main}UserTel", "orderable": "UserTel" },
                    //{ "data": "remark1", "name": "[Contains]{main}remark1", "orderable": "remark1" },
                    //{ "data": "remark2", "name": "[Contains]{main}remark2", "orderable": "remark2" },
                    { "data": "ssh_status", "orderable": false },
                    { "data": "orderTime", "orderable": "orderTime" }

                ],
                "columnDefs": [
                      //{
                      //    "targets": [0],
                      //    "visible": true
                      //},
                         {
                             "render": function (data, type, row) {
                                 return '<span class="label label-success"> ' + data + '</span>';
                             },
                             "targets": 2
                         },
                      {
                          "render": function (data, type, row) {
                              return data;
                          },
                          "targets": 4
                      },
                        {
                            "render": function (data, type, row) {
                                return data + "  ~ " + row.remark2;
                            },
                            "targets": 1
                        },
                         {
                             "render": function (data, type, row) {
                                 if(data==0)
                                     return '<span class="label label-warning">挂单中</span>';
                                 else if (data == 2)
                                     return '<span class="label label-important">已撤单</span>';
                                 else if (data == 3)
                                     return '<span class="label label-success">交易完成</span>';
                                 else if (data == 6)
                                     return '<span class="label label-success">交易完成</span>';

                             },
                             "targets": 6
                         },
                ]

            });
            $(table + ' tbody').on('click', 'tr', function () {
                $(this).toggleClass('info');

            });

        });
        //工具条事件
        function toolbarBtnItemClick(item) {
            var id = item.id;
            if (item.id == undefined)
                id = item.currentTarget.id;
            switch (id) {
                case "Add":
                    Jump("/admin/Order/OrderDetail")
                    break;
                case "ReservationOrderUpdate":
                    var selected = $(table).DataTable().rows('.info').data()[0];
                    if (!selected) {
                        window.parent.LG.tip('请选择行!');
                        return
                    }
                    Jump("/admin/Order/OrderDetail?ordernum=" + selected.orderNum)
                    break;
                case "Delete":

                    if (confirm('确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?')) {
                        f_delete();
                        // 退出操作;
                    }

                    break;
                case "ReservationOrderToCSV":
                    if (confirm('确定导出CSV吗?')) {
                        toCsv();
                    }

                    break;
                case "RealDelete":
                    $.messager.confirm('删除', '确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?', function (r) {
                        if (r) {
                            realdelete();
                            // 退出操作;
                        }
                    });
                    break;
                case "selectall":
                    $(table + '  tr').toggleClass('info');
                    break;
            }
        }
        function toCsv() {

                LG.ajax({
                    url: rootPath + 'Order/ToCSV',
                    loading: '正在导出中...',
                    success: function (message) {
                        // reload();
                        window.location = message.Data;
                        window.parent.LG.tipSuccess('导出成功!');
                    },
                    error: function (message) {
                        window.parent.LG.tipError(message);
                    }
                });
            
        }

    </script>
}

