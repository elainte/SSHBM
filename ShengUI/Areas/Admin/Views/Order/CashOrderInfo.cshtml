@section backScripts
{

    <script type="text/javascript">

        //相对路径
        var rootPath = "@Url.Content("~/Admin/")";
        var table = "#ordertable";
        var gridUrl = rootPath + 'Order/GetCashForGrid';
        //加载toolbar
        LG.loadToolbar("tablebutton", toolbarBtnItemClick);
        $(document).ready(function () {
            //TablePage();
            var dt = $(table).dataTable({
                "processing": true,
                "serverSide": true,
                "ordering": true,
                "order": [[5, "desc"]],
                "ajax": {
                    "url": gridUrl,
                    "type": "POST",
                  
                },
                "columns": [
                    { "data": "userId", "name": "[Contains]{main}userId", "orderable": false },
                    { "data": "bankInfo", "name": "[Contains]{main}bankInfo", "orderable": false },
                    { "data": "bankUserInfo", "name": "[Contains]{main}bankUserInfo", "orderable": "bankUserInfo" },
                    { "data": "remark1", "name": "[Contains]{main}remark1", "orderable": false },
                    { "data": "TXmoney", "name": "[Contains]{main}TXmoney", "orderable": false },
                    { "data": "TXstate", "orderable": "TXstate" },
                    { "data": "Addtime", "orderable": "Addtime" }

                ],
                "columnDefs": [
                      //{
                      //    "targets": [0],
                      //    "visible": true
                      //},
                         {
                             "render": function (data, type, row) {
                                 return '<span class="label label-success"> ' + data + '</span>';
                             },
                             "targets": 4
                         },
                         {
                             "render": function (data, type, row) {
                                 if(data==0)
                                     return '<span class="label label-warning">已受理</span>';
                                 else if (data == 2)
                                     return '<span class="label label-important">作废</span>';
                                 else if (data == 1)
                                     return '<span class="label label-success">提现完成</span>';
                                 else 
                                     return '<span class="label label-success">已受理</span>';

                             },
                             "targets": 5
                         },
                ]

            });
            $(table + ' tbody').on('click', 'tr', function () {
                $(this).toggleClass('info');

            });

        });
        //工具条事件
        function toolbarBtnItemClick(item) {
            var id = item.id;
            if (item.id == undefined)
                id = item.currentTarget.id;
            switch (id) {
                case "Add":
                    Jump("/admin/Order/OrderDetail")
                    break;
                case "CashOrderComfim":
                  
                    var selected = $(table).DataTable().rows('.info').data()[0];
                    if (!selected) {
                        window.parent.LG.tip('请选择行!');
                        return
                    }
                    if (confirm('确定要通过审核吗?')) {
                        f_check();
                      
                    }
                    break;
                case "CashOrderCancel":
                  
                    var selected = $(table).DataTable().rows('.info').data()[0];
                    if (!selected) {
                        window.parent.LG.tip('请选择行!');
                        return
                    }
                    if (confirm('确定要作废吗?')) {
                        f_cancel();
                      
                    }
                    break;
                case "Delete":

                    if (confirm('确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?')) {
                        f_delete();
                        // 退出操作;
                    }

                    break;
                case "ReservationOrderToCSV":
                    if (confirm('确定导出CSV吗?')) {
                        toCsv();
                    }

                    break;
                case "RealDelete":
                    $.messager.confirm('删除', '确定删除吗(该删除操作将会永久删除,一旦删除将无法挽回)?', function (r) {
                        if (r) {
                            realdelete();
                            // 退出操作;
                        }
                    });
                    break;
                case "selectall":
                    $(table + '  tr').toggleClass('info');
                    break;
            }
        }
        function toCsv() {

                LG.ajax({
                    url: rootPath + 'Order/ToCSV',
                    loading: '正在导出中...',
                    success: function (message) {
                        // reload();
                        window.location = message.Data;
                        window.parent.LG.tipSuccess('导出成功!');
                    },
                    error: function (message) {
                        window.parent.LG.tipError(message);
                    }
                });
            
        }
        function GetAllCheck() {
            var Ids = "";
            var rows = $(table).DataTable().rows('.' + tablerowclass).data();
            for (var i = 0, l = rows.length; i < l; i++) {

                Ids += rows[i].Id + ",";

            }
            return Ids;

        }
        function reload() {
            $(table).DataTable().ajax.reload();
        }
        function f_check() {
            // var table = $(table).DataTable();
            var selected = $(table).DataTable().rows('.' + tablerowclass).data();
            if (selected.length > 0) {

                var data = {};
                data.Ids = GetAllCheck();
                LG.ajax({
                    url: rootPath + 'Order/CashOrderComfim',
                    loading: '正在审核中...',
                    data: data,
                    success: function () {
                        reload();
                        window.parent.LG.tipSuccess('审核成功!');
                    },
                    error: function (message) {
                        window.parent.LG.tipError(message);
                    }
                });
            }
            else {
                window.parent.LG.tip('请选择行!');
            }
        }
        function f_cancel() {
            // var table = $(table).DataTable();
            var selected = $(table).DataTable().rows('.' + tablerowclass).data();
            if (selected.length > 0) {

                var data = {};
                data.Ids = GetAllCheck();
                LG.ajax({
                    url: rootPath + 'Order/CashOrderCancel',
                    loading: '正在作废中...',
                    data: data,
                    success: function () {
                        reload();
                        window.parent.LG.tipSuccess('作废成功!');
                    },
                    error: function (message) {
                        window.parent.LG.tipError(message);
                    }
                });
            }
            else {
                window.parent.LG.tip('请选择行!');
            }
        }
    </script>
}

