            $("#categoryparas").children().first().find("a").show();
            var length = $("#categoryparas").children().length;
            if (length < 10) {
                var data = {};
                data.id = index;
                //$("#firstparadelbutton").show();
                $("#productParasTemplate").tmpl(data).appendTo("#categoryparas");
